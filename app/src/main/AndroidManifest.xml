<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.teamone.salesmanagement">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_sama"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_sama"
        android:supportsRtl="true"
        android:theme="@style/Theme.SalesManagement">
        <activity android:name=".Bill.SettingProductOnBillActivity" />
        <activity
            android:name=".Customer.EditCustomerActivity"
            android:label="Sửa khách hàng" />
        <activity
            android:name=".Customer.AddCustomerActivity"
            android:label="Thêm khách hàng" />
        <activity
            android:name=".Customer.ListCustomerActivity"
            android:label="hách hàng" />
        <activity
            android:name=".Bill.BillDetailActivity"
            android:label="Chi tiết hóa đơn" />
        <activity
            android:name=".Bill.AddBillActivity"
            android:label="Thêm hóa đơn" />
        <activity
            android:name=".Bill.ListBillActivity"
            android:label="Danh sách hóa đơn" />
        <activity
            android:name=".Product.ListProductActivity"
            android:label="Danh sách sản phẩm" />
        <activity
            android:name=".Product.AddProductActivity"
            android:label="Thêm sản phẩm" />
        <activity
            android:name=".Product.EditProductActivity"
            android:label="Sửa sản phẩm" />
        <activity
            android:name=".Revenue.RevenueActivity"
            android:label="Doanh thu" />
        <activity
            android:name=".MainActivity"
            android:label="Trang chủ">
        </activity>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>